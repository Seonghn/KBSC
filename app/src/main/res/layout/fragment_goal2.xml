<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/target"
            android:fontFamily="@font/jalnan"
            android:textSize="45dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 목표 달성 계획 -"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_marginTop="20dp"
        android:layout_height="140dp"
        android:background="@drawable/darkline"
        android:paddingLeft="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/tm"
                android:fontFamily="@font/jalnan"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 개월 동안"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/r1"
                android:fontFamily="@font/jalnan"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 원 절약 필요"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:id="@+id/r2"
                android:fontFamily="@font/jalnan"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 원 절약 필요"
                android:textSize="25dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 상세 위험 소비 리포트 -"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_marginTop="20dp"
        android:layout_height="290dp"
        android:background="@drawable/darkline"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:background="@drawable/darkline"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="금 액"
                android:background="@drawable/darkline"
                android:textSize="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/fl1"
                android:layout_marginLeft="14dp"
                android:text="1."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fl2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="2."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fl3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="3."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fl4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:layout_height="0dp"
                android:text="4."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fl5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:text="5."
                android:textSize="23dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/darkline"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/darkline"
            android:layout_height="wrap_content"
            android:text="빈 도"
            android:textSize="25dp"/>
            <TextView
                android:id="@+id/fr1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:text="1."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fr2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="2."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fr3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:text="3."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fr4"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:layout_height="0dp"
                android:text="4."
                android:textSize="23dp"/>
            <TextView
                android:id="@+id/fr5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:text="5."
                android:textSize="23dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>