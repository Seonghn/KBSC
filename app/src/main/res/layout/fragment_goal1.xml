<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnan"
                android:text="-"
                android:textSize="45dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 목표 달성 계획 -"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/darkline"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 평균 소비금액 "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnan"
                    android:text="--"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월 평균 "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnan"
                    android:text="---"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="% 소비율 줄이기"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 상세 위험 소비 리포트 -"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="290dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/darkline"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/darkline"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/darkline"
                    android:gravity="center"
                    android:text="금 액"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/fl1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="1."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fl2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="2."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fl3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="3."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fl4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="4."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fl5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="5."
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/darkline"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/darkline"
                    android:gravity="center"
                    android:text="빈 도"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/fr1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="1."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fr2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="2."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fr3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="3."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fr4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="4."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/fr5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:text="5."
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>