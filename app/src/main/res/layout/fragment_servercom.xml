<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/server_communication_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <!-- 사용자 입력정보 받는 란 -->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌정보" />

                <!--국민은행 기준 계좌번호 길이 14 -->
                <EditText
                    android:id="@+id/account_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:hint="ex) 58890204070569"
                    android:text="43140104100408"
                    android:textColorHint="#88808080"
                    android:textSize="10dp"
                    android:inputType="numberDecimal"
                    android:maxLength="14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일" />

                <EditText
                    android:id="@+id/birth_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:hint="ex) 960520"
                    android:text="971028"
                    android:textColorHint="#88808080"
                    android:textSize="10dp"
                    android:inputType="numberDecimal"
                    android:maxLength="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계좌비밀번호" />

                <EditText
                    android:id="@+id/passwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:hint="ex) 0000"
                    android:text="1089"
                    android:textColorHint="#88808080"
                    android:textSize="10dp"
                    android:inputType="numberPassword"
                    android:maxLength="4"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 서버 전송 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/account_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌정보 저장"
                android:textSize="12dp"/>

            <Button
                android:id="@+id/server_send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계좌정보 받아오기" />
        </LinearLayout>
    </LinearLayout>

    <!-- 계좌 정보 출력 란 -->

    <ScrollView
        android:id="@+id/server_communication_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/account_print_border">

        <TextView
            android:id="@+id/sc_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textSize="10dp" />

    </ScrollView>

</LinearLayout>